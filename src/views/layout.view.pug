<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="stylesheet", href="/css/normalize.css")
    link(rel="stylesheet", href="/css/styles.css")
    title #{ pageTitle }
  body

    header.barra
      h1 UpTask - Projects Manager
      a(href="#") Log Out

    main.contenedor
      aside.contenedor-proyectos
        .panel.crear-proyecto
          a(href="/new" class='boton') New Project
            span +
        .panel.lista-proyectos
          h2 Projects
          ul#proyectos.proyectos
            if(projects.length)
              each project in projects
                li
                  a(href=`/projects/${project.url}`) #{ project.name }
            
      block content

    script(src="/dist/bundle.js")
    script(src='https://kit.fontawesome.com/55461b42a6.js' crossorigin='anonymous')
